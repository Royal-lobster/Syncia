{
  "name": "mdast-util-newline-to-break",
  "version": "1.0.0",
  "description": "mdast utility to support hard breaks without needing spaces or escapes",
  "license": "MIT",
  "keywords": [
    "mdast",
    "markdown",
    "break",
    "newline",
    "linefeed"
  ],
  "repository": "syntax-tree/mdast-util-newline-to-break",
  "bugs": "https://github.com/syntax-tree/mdast-util-newline-to-break/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Remco Haszig <remcohaszing@gmail.com>",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": "./index.js",
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/mdast": "^3.0.0",
    "mdast-util-find-and-replace": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "c8": "^7.0.0",
    "mdast-util-from-markdown": "^1.0.0",
    "mdast-util-to-markdown": "^1.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.54.0"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --check-coverage --100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true
  }
}
